<% content_for :title, '邹小创的个人站点' %>

<div class="home">
<h1 class="page-heading">文章列表</h1>
  <ul class="post-list">
    <% @posts.each do |post| %>
        <li>
          <span class="post-meta"><%= post.created_at %></span>
          <h2>
            <%= link_to post.title, post, class: 'post-link' %>
          </h2>
        </li>
    <% end %>
  </ul>
<br>

  <% if is_admin  %>
      <%= link_to 'New Post', new_post_path %>
  <% end %>

</div>